<div>
  <h1>User info</h1>
  <table>
    <tr>
      <td><%= image_tag user.get_profile_image(100,100) %></td>
    </tr>
    <tr>
      <td>Name</td>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <td>Introduction</td>
      <td><%= user.introduction %></td>
    </tr>
  </table>
  <% if user == current_user %>
    <%= link_to "edit", edit_user_path(user.id) %>
  <% end %>
</div>
<% if @user.errors.any? %>
  <h1><%= @user.errors.count %>errors prohibited this obj from being saved:</h1>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>
  <label for="inputName">Name</label><br>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%><br>
  <label for="inputImage">Image</label><br>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>
  <label for="inputIntroduction">Introduction</label><br>
  <%= f.text_area :introduction, id:"inputIntroduction", placeholder:"自己紹介文"%><br>
  <%= f.submit "Update User" %>
<% end %>

<span><%= link_to "Show", user_path(@user.id) %></span>
<span><%= link_to "Back", users_path %></span>
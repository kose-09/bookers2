<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="row m-1">
        <%= render '/users/userinfo', user: current_user %>
      </div>
      <div class="m-1">
        <%= render '/books/new_book', book: @book %>
      </div>
    </div>
    <div class="col-md-8 offset-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(100,100) %></td>
              <td><%= user.name %></td>
              <td><%= link_to 'Show', user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>







<div>
  <h1>User info</h1>
  <table>
    <tr>
      <td>
        <%= image_tag current_user.get_profile_image(100,100) %>
      </td>
    </tr>
    <tr>
      <td>Name</td>
      <td><%= current_user.name %></td>
    </tr>
    <tr>
      <td>Introduction</td>
      <td><%= current_user.introduction %></td>
    </tr>
  </table>
    <%= link_to "edit", edit_user_path(current_user.id) %>
</div>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create' %>
<% end %>


  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

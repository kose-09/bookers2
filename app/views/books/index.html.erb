<%= render '/users/current_userinfo' %>

<%= render '/books/new_book', book: @book %>


  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
